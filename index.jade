					.one.column
						label(class='u-pull-right', for='newsCity') City
					.three.columns
						input(class='u-full-width', placeholder='Location', type='text', id='newsCity')

				.row
					.two.columns
						label(class='u-pull-right', for='newsEdition') Edition
					.three.columns
						input(class='u-full-width', placeholder='Edition', type='text', id='newsEdition')
					.two.columns
