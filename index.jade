						input(class='button-primary', id='citeWebsite', value='Make Citation', type='button')

			//Journal
			div(id ='journalInput',class='container hidden', style={width: '100%'})
				.row
					.two.columns
						label(class='u-pull-right', for='title') Article Title
					.six.columns
						input(class='u-full-width', placeholder='Title', type='text', id='jouArticleTitle')
				#jouAuthors
					.row
