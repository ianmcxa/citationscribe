						.two.columns
							input(class='button', id='magAddAuthor', value='Add Author', type='button')
				.row
					.two.columns
						label(class='u-pull-right', for='magTitle') Magazine Title
					.six.columns
						input(class='u-full-width', placeholder='Magazine', type='text', id='magTitle')
				.row
					.two.columns
						label(class='u-pull-right', for='magURL') Magazine URL
					.six.columns
						input(class='u-full-width', placeholder='URL', type='text', id='magURL')

				.row
					.two.columns
						label(class='u-pull-right', for='magVolume') Volume
					.two.columns
						input(class='u-full-width', placeholder='Volume', type='text', id='magVolume')
					.two.columns
