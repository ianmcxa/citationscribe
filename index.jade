				.row
					.three.columns
						input(class='button-primary', id='citeNewspaper', value='Make Citation', type='button')

			//website
			div(id ='webInput',class='container hidden', style={width: '100%'})
				.row
					.two.columns
						label(class='u-pull-right', for='title') Article Title
					.six.columns
						input(class='u-full-width', placeholder='Title', type='text', id='webArticleTitle')
				#webAuthors
					.row
